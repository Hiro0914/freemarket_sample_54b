<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
   <%= render 'layouts/error', model: f.object %>
  </div>

  <%= f.fields_for :personal,Personal.new do |personal| %>
    <div class="field">
      <%= personal.label "姓" %><br />
      <%= personal.text_field :last_name, autocomplete: "off" %>
      <%= render 'layouts/error', model: f.object %>
      <%= personal.label "名" %><br />
      <%= personal.text_field :first_name, autocomplete: "off" %>
    </div>
    <div class="field">
      <%= personal.label "姓(カナ）" %><br />
      <%= personal.text_field :last_name_kana, autocomplete: "off" %>
      <%= personal.label "名（カナ）" %><br />
      <%= personal.text_field :first_name_kana, autocomplete: "off" %>
    </div>
    <div class="field">
      <%= personal.label "生年月日" %><br />
      <%= personal.datetime_select :birthdate,:include_blank => true,:use_month_numbers => true,:start_year=>Time.now.year,:end_year=>1900,discard_hour: true, autocomplete: "off"%>
    </div>
  <% end %>
  <div class="">
  
  

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

