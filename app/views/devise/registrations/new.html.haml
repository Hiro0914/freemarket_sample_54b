%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
    - if resource.errors.full_messages_for(:email).present?
      %p メールアドレスを入力してください
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
    - if resource.errors.full_messages_for(:password).present?
      %p パスワードを入力してください
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
    - if resource.errors.full_messages_for(:password).present?
      %p パスワード(確認)を入力してください
  = f.fields_for :personal,@user.build_personal do |personal|
    .field
      = personal.label "姓"
      %br/
      = personal.text_field :last_name, autocomplete: "off"
      - if  @user.build_personal.errors.full_messages_for(:last_name).present?
        %p 姓を入力してください
      = personal.label "名"
      %br/
      = personal.text_field :first_name, autocomplete: "off"
      - if personal.object.errors.full_messages_for(:last_name).present?
        %p 姓を入力してください
    .field
      = personal.label "姓(カナ）"
      %br/
      = personal.text_field :last_name_kana, autocomplete: "off"
      = personal.label "名（カナ）"
      %br/
      = personal.text_field :first_name_kana, autocomplete: "off"
    .field
      = personal.label "生年月日"
      %br/
      != sprintf(personal.date_select(:birthdate,:include_blank => true,:use_month_numbers => true,:start_year=>Time.now.year,:end_year=>1900,autocomplete: "off", date_separator:'%s'),'年','月')+'日'
  %div
    .actions
      = f.submit "Sign up"
