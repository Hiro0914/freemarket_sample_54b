.root-wrapper
  = render partial: 'header'
  .root-contents
    .root-campaign
      .root-campaign__arrow__left
      .root-campaign__arrow__right
      .root-campaign__slider
        %span.root-campaign__slider1
        %span.root-campaign__slider2
    .root-categoly__box
      .root-categoly__box--popular
        人気のカテゴリー
      %ul.root-categoly__box__list
        - @categolies.each do |categoly|
          %li.root-categoly__box__list--label
            = categoly
    = render partial: 'itembox'
  .root-app__dl
    .root-app__dl__box
      .root-app__dl__box__left
        .root-app__dl__box__left--title
          スマホでかんたんアプリ
        .root-app__dl__box__left--text
          今すぐ無料ダウンロード
        .root-app__dl__box__left--image
          .root-app__dl__box__left--image--icon
            =image_tag "mercari_icon.png",size: "68x68"
          .root-app__dl__box__left--image--appstore
            =image_tag "app_store.svg",size:"144x40"
          .root-app__dl__box__left--image--googleplay
            =image_tag "google-play.svg",size:"144x40"
      .root-app__dl__box__right
        =image_tag "app_koukoku.png",size:"300x260"
  = render partial: 'footer'
  .root-exhibit__button
    .root-exhibit__button--text
      出品
    =link_to "https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg",class: "exhibit__button__icon" do
      = fa_icon "camera 3x", class: "root-exhibit__button__icon"